#!/bin/bash

IFS=$'\n'
today=(date '+%d-%m-%Y');

date=$(date -v -6m "+%Y-%m-%d")

	echo $date

	for mxf in \
				$(find 		/Volumes/FINALS/MXF\ FILES/ -type f 		\
						\( 	-and -iname "*.mxf" -or -iname "*.mp4" 	\)	\
							-newermt $date								\
				); do

	ffmpeg 				-y -i "$mxf" -c:v libx264 -b:v 1500k -c:a aac -b:a 96k \
						-pix_fmt yuv420p -profile:v main -level 3.1 -f mp4 \
						$mxf-ref-tv.mp4 ;
done

find 			/Volumes/FINALS/MXF\ FILES/ -type f -iname "*-ref-tv.mp4" \
				-exec mv {} /Volumes/DATA/99_TMP/2mnt/mxf \;

#	for web in 	
#				$(find 		/Volumes/FINALS/QUICKTIME\ FILES -type f	\
#							-iname "*.mp4"								\
#							-newermt date 
#				\); do

#				ffmpeg 	-y -i "$web" -c:v libx264 -b:v 1500k -c:a aac -b:a 96k \
#						-pix_fmt yuv420p -profile:v main -level 3.1 -f mp4 \
#						/Volumes/DATA/99_TMP/2mnt/web/$web-ref_web.mp4 ;
	
# done
	
	for name in \
				$(find 	/Volumes/DATA/99_TMP/2mnt/ -name "*.mxf-ref*"); do

	mv			"${name}" ${name/.mxf/}
					
done
